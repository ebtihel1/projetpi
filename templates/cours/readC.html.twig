<table class="table">
    <thead>
        <tr>
            <th>Ref</th>
            <th>Formation</th>
            <th>Nom</th>
            <th>file</th>
            <th>Action</th> <!-- Ajout d'une colonne pour les actions -->
        </tr>
    </thead>
    <tbody>
        {% for c in cours %}
        <tr>
            <td>{{ c.ref }}</td>
            <td>{{ c.formation.nom }}</td>
            <td>{{ c.nom }}</td>
            <td>{{ c.file }}</td>
           <td>
                <a href="{{ path('editCours', {'ref': c.ref}) }}" class="btn btn-primary">Modifier</a> <!-- Bouton de modification -->
                <a href="{{ path('deleteCours', {'ref': c.ref}) }}" class="btn btn-danger">Supprimer</a> <!-- Bouton de suppression -->
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
